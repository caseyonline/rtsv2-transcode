%% -*- mode:erlang;tab-width:2;erlang-indent-level:2;indent-tabs-mode:nil -*-
[ "release-files/rtsv2_core.config",
  {rtsv2,

   [ {overrides,
      [ {transPoPConfig, #{ leaderTimeoutMs => 1000
                          , leaderAnnounceMs => 500
                          }}

      , {edgeConfig, #{ lingerTimeMs => 2000
                      }}

      , {popDefinitionConfig, #{ directory => "test/config/"
                               }}

      , {ingestAggregatorConfig, #{ shutdownLingerTimeMs => 1000
                                  }}
      ]}

   , {disk_log_root, "logs"}
   , {disk_log_handlers,
      [
       %% debug.log
       {handler, disk_log, logger_std_h,
        #{config => #{
                      file => "debug.log",
                      max_no_files => 10,
                      max_no_bytes => 22428800, % 10 x 5mb
                      filesync_repeat_interval => 100 % fsync after 100ms when a change is made
                     },
          level => debug,
          formatter => {logger_formatter, #{single_line => true,
                                            time_offset => "Z",
                                            chars_limit => 4096,
                                            depth => 40,
                                            template => [time, " ", level, ": ", pid, " ", mfa, ":", line, " ", msg, " ", domain, ": ", misc, "\n"]
                                           }
                       },
          filters => [
                      %% {domain_filter, {fun logger_filters:domain/2, {stop, sub, ['otp', 'sasl']}}}
                     ]
         }
       },

       %% audit.log
       {handler, audit_log, logger_std_h,
        #{config => #{
                      file => "audit.log",
                      max_no_files => 10,
                      max_no_bytes => 22428800, % 10 x 5mb
                      filesync_repeat_interval => 100 % fsync after 100ms when a change is made
                     },
          level => debug,
          filter_default => stop,
          formatter => {logger_formatter, #{single_line => true,
                                            time_offset => "Z",
                                            chars_limit => 4096,
                                            depth => 40,
                                            template => [time, " ", event, ": ", customerId, " ", streamId, ":", streamVariantId, "\n"]
                                           }
                       },
          filters => [
                      {domain_filter, {fun logger_filters:domain/2, {log, sub, ['audit']}}}
                     ]
         }
       }

      ]}
   ]}

, {kernel,
   [ {logger_level, debug}
   , {logger, [
               %% Console
               { handler, default, logger_std_h
               , #{ formatter => { logger_formatter
                                 , #{ single_line => true
                                    , time_offset => "Z"
                                    , chars_limit => 32768
                                    , depth => 40
                                    , template => [time," ", level,": ", pid, " ", msg, ": ", misc, "\n"]
                                    }}
                  , filters => [
                                {domain_filter, {fun logger_filters:domain/2, {stop, sub, ['otp', 'sasl']}}}
                               ]
                  }
               }
              ]}
   ]}
].
